    </li>
    <li>
        <%= f.text_field :qs10, :required => true %>
        <%= f.number_field(:points10, in: 1.0..10.0, step: 0.5, :required => true) %>
    </li>
     <li>
        <%= f.datetime_field :date_of_create, :required => true %>
    </li>
  </ol>
  <%= f.submit "Generate Round" %>
<% end %>

</form>