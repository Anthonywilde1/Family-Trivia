

<h2>Please enter a single question below</h2>

<%= form_with scope: :question, url: round_questions_path do |f| %>

<ol>
    <li>
        <%= f.hidden_field :round_id %>
        <%= f.text_field :question, :required => true %>
        <%= f.text_field :answer, :required => true %>
        <%= f.number_field :points, in: 1.0..10.0, step: 0.5, :required => true %>
    </li>    
</ol>
<%= f.submit "Generate Question" %>


<% end %>