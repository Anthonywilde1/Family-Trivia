<%= render "partials/menu" %>

<h2>Please enter a single round of questions below</h2>
<form action="/questions" method="POST">
<input type="hidden" value="<%=form_authenticity_token %>" name="authenticity_token" />

<%= form_with model: @question do |f| %>
<ol>
    <li>
        <%= f.text_field :qs1, :required => true %>
        <%= f.number_field(:points1, in: 1.0..10.0, step: 0.5, :required => true) %>
    </li>
    <li>
        <%= f.text_field :qs2, :required => true %>
        <%= f.number_field(:points2, in: 1.0..10.0, step: 0.5, :required => true) %>
    </li>
    <li>
        <%= f.text_field :qs3, :required => true %>
        <%= f.number_field(:points3, in: 1.0..10.0, step: 0.5, :required => true) %>
    </li>
    <li>
        <%= f.text_field :qs4, :required => true %>
        <%= f.number_field(:points4, in: 1.0..10.0, step: 0.5, :required => true) %>
    </li>
    <li>
        <%= f.text_field :qs5, :required => true %>
        <%= f.number_field(:points5, in: 1.0..10.0, step: 0.5, :required => true) %>
   </li>
   <li>
        <%= f.text_field :qs6, :required => true %>
        <%= f.number_field(:points6, in: 1.0..10.0, step: 0.5, :required => true) %>
   </li>
   <li>
        <%= f.text_field :qs7 %>
        <%= f.number_field(:points7, in: 1.0..10.0, step: 0.5, :required => true) %>
   </li>
   <li>
        <%= f.text_field :qs8, :required => true %>
